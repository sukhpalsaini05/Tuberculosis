<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#ffffff"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorPrimary" />
                    <corners
                        android:radius="4dp" />

                </shape>
            </item>
            <item
                android:top="0dp"
                android:right="5dp">
                <bitmap android:src="@mipmap/arrow_bitmap"
                    android:gravity="top|right" />
            </item>
        </layer-list>
    </item>
</selector>